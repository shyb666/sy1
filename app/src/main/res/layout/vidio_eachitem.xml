<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/item_background"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/item_background1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
  <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="15dp"
      android:id="@+id/author_icon"
      android:src="@drawable/space_station_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/author_name"
            android:text="xxzxxzxxzxxzxxzxxz"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

        <TextView
            android:id="@+id/author_intro"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="xxzxxzxxzxxzxxzxxz"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="xxz"
            android:textSize="30dp"
            android:id="@+id/video_name"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <VideoView
        android:id="@+id/vidio_area"
        android:layout_width="218dp"
        android:layout_height="162dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="35dp"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/vidio_like"/>
                <TextView
                    android:id="@+id/vidio_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="aaa"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/vidio_collect"/>
                <TextView
                    android:id="@+id/vidio_collect_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="aaa"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageButton
                    android:id="@+id/vidio_comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/vidio_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="aaa"/>
            </LinearLayout>

        </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/liteblue1">
        <ImageView
            android:id="@+id/firstcomment_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/double_arrows"/>
        <TextView
            android:id="@+id/firstcomment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:text="aaa"/>

    </LinearLayout>

</LinearLayout>